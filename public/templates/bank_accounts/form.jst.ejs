<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="ba-bank">Bank</label>
      <div class="controls">
        <input type="text" class="span2" id="ba-bank" name="bank" value="<%= model.get('bank') %>">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="ba-name">Name</label>
      <div class="controls">
        <input type="text" class="span2" id="ba-name" name="name" value="<%= model.get('name') %>">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="ba-number">Account Number</label>
      <div class="controls">
        <input type="text" class="span2" id="ba-number" name="account_number" value="<%= model.get('account_number') %>">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="ba-currency">Currency</label>
      <div class="controls">
        <input type="text" class="span2" id="ba-currency" name="currency" value="<%= model.get('currency') %>">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="ba-initial">Initial Balance</label>
      <div class="controls">
        <input type="text" class="span2" id="ba-initial" name="initial_cents" value="<%= model.get('initial_cents') %>">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="ba-description">Description</label>
      <div class="controls">
        <textarea class="input-xlarge" id="ba-description" name="description"><%= model.get('description') %></textarea>
      </div>
    </div>
    <% if (showFormActions) { %>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
    <% } %>
  </fieldset>
</form>
